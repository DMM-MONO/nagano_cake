<div class="mt-5">
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-10">
<h2>注文履歴一覧</h2>
<table class="table">
 <thead>
 <tr>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
  <th>注文ステータス</th>
 </tr>
 </thead>
 <tbody>
 <% @orders.each do |order| %>
 <tr>
   <td><%= link_to order_path(@order.id), order.created_at %></td>
   <td><%=order.full_name %></td>
   <td><%=order.amount %></td>
   <td class="status"><%= order.status %></td>
  <% else %>
  <td><%= order.status %></td>
  <% end %>
<% end %>
 </tr>
 </tbody>
</table>
<%= paginate @orders %>
</div>
</div>
</div>
</div>