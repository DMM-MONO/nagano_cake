<div class="mt-5">
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-10">
<h2>注文履歴一覧</h2>
<table class="table">
 <thead>
 <tr>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
  <th>注文ステータス</th>
 </tr>
 </thead>
 <tbody>
 <% @orders.each do |order| %>
 <tr>

   <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
   <td><%= order.name %></td>
   <td><%= order.order_details.sum(:amount) %></td>
   <td><%= order.status %></td>

<% end %>
 </tr>
 </tbody>
</table>
<%= paginate @orders %>
</div>
</div>
</div>
</div>