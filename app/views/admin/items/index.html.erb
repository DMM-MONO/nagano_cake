<div class="mt-5">
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-10">
 <td><%= link_to "新規登録", new_admin_item_path %></td>
<h2>商品一覧</h2>
<table class="table">
 <thead>
 <tr>
  <th>商品ID</th>
  <th>商品名</th>
  <th>税抜価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
 </tr>
 </thead>
 <tbody>
  <% @items.each do |item| %>
  <tr>
  <td><%= item.id %></td>

  <td> <%= link_to admin_item_path(item.id)do %>
       <%= item.name %>
    <% end %>
  </td>

  <td><%= item.price %></td>
  <td><%= item.genre.name %></td>
  <% if item.is_active == "販売中" %>
  <td class="active"><%= item.is_active %></td>
  <% else %>
  <td><%= item.is_active %></td>
  <% end %>
<% end %>
</tr>
</tbody>
</table>
<%= paginate @items %>
</div>
</div>
</div>
</div>
