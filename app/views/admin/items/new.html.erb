<h1>商品新規登録</h1>
<%= form_with model:@item, url:'/admin/items', local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい"  %>
  <h4>税抜き価格</h4>
   <%= f.text_field :price %>円
  <h4>販売状況</h4>
   <%#= f.select :is_active,is_active_i18n.invert %>
  <div>
   <%= f.radio_button :is_active, :sold %>
   <%= f.label :done, '販売中', value: true %>
  </div>
   <div>
    <%= f.radio_button :is_active, :soldout %>
    <%= f.label :done, '販売停止', value: false %>
   </div>
  <%= f.submit '新規登録' %>
<% end %>