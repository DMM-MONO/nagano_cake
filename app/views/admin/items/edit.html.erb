<h1>商品編集</h1>
<%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい"  %>
  <h4>税抜き価格</h4>
   <%= f.text_field :price %>円
  <h4>販売状況</h4>
  <div>
   <%= f.radio_button :is_active, :販売中 %>
   <%= f.label :done, '販売中', value: true %>
  </div>
   <div>
    <%= f.radio_button :is_active, :販売停止中 %>
    <%= f.label :done, '販売停止', value: false %>
   </div>
  <%= f.submit '変更を保存' %>
<% end %>