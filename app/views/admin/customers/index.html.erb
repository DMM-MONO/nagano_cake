<div class="container">
  <div class="row mt-3">
    <h2 calss="headline">会員一覧</h2>
      <table class="table table-hover table-inverse mt-3">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
         <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == "有効" %>
            　<td class="active"><%= customer.is_deleted %></td>
            <% else %>
            　<td class="no-active"><%= customer.is_deleted %></td>
            <% end %>
         </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mx-auto"><%= paginate(@customers) %></div>
  </div>
</div>


