<h1>注文詳細</h1>

 <h4>購入者</h4>
  <td><%= @order.name %></td>

  <h4>注文日</h4>
  <%= @order.created_at.strftime('%Y/%m/%d') %>

   <h4>配送先</h4>
    〒<%= @order.post_code %>
   <%= @order.address %>
   <%= @order.name %>

    <h4>支払い方法</h4>
    <%=  @order.payment_method %>
     <h4>注文ステータス</h4>
    <%= @order.status %>
  <%#= link_to "編集する",admin_customer_path(@customer.id) %>

   <table class="table table-bordered genre-table">
              <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価(税込)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th>制作ステータス</th>
                </tr>
              </thead>
              <tbody>

                <% @order_details.each do |order_detail| %>
                <tr>
                  <td>
                    <%= order_detail.item.name %></td>
                  <td><%= (order_detail.price*1.1).round %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= ((order_detail.price*1.1).round)*(order_detail.amount) %>
                      <% @sum += ((order_detail.price*1.1).round)*(order_detail.amount) %>
                  </td>
                </tr>
                  <% end %>
              </tbody>
            </table>

             <table class="table table-bordered ">
	            <tbody>
　　　         <tr>
　　　            <th>商品合計</th>
　　　            <td><%= @order.total_payment %></td>
　　　         </tr>
　　　         <tr>
　　　            <th>送料</th>
　　　            <td><%= @order.postage %>円</td>
　　　         </tr>
　　　         <tr>
　　　           <th>請求合計金額</th>
　　　           <td></td>
               </tr>
              </tbody>
               </table>