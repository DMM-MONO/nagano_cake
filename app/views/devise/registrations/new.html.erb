<h2>新規会員</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="field">
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class ="field">
    <%= f.label :last_name_kana, "セイ" %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
    <%= f.label :first_name_kana, "メイ" %>
    <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
     <%= f.label :post_code %>
     <%= f.text_field :post_code, autofocus: true, autocomplete: "postcode" %>
  </div>
  
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
     

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
