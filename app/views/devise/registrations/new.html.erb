<div class="container">
  <div class="row">
    <div class="col-md-12 ">
      <h2>新規会員登録</h2>
      <%= form_with model: @customer, url:  customer_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

　      <div class= "d-flex flex-row bd-highlight mb-3 ">
         <div class ="d-flex flex-row p-2 bd-highlight">
           <div class = "p-2 bd-highlight">名前</div>
           <div class = "p-2 bd-highlight"><%= f.label :last_name, "(姓)" %></div>
           <div class = "p-2 bd-highlight"><%= f.text_field :last_name, autofocus: true, placeholder: "山田", required: true %></div>
          </div>
          <div class = "d-flex flex-row p-2 bd-highlight">
           <div class = "p-2 bd-highlight"><%= f.label :first_name, "(名)" %></div>
           <div class = "p-2 bd-highlight"><%= f.text_field :first_name, autofocus: true, placeholder: "太郎", required: true %></div>
         </div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
         <div class ="d-flex flex-row p-2 bd-highlight">
           <div class = "p-2 bd-highlight">フリガナ</div>
           <div class = "p-2 bd-highlight"><%= f.label :last_name_kana, "(セイ)" %></div>
           <div class = "p-2 bd-highlight"><%= f.text_field :last_name_kana, autofocus: true, placeholder: "ヤマダ", required: true %></div>
          </div>
          <div class = "d-flex flex-row p-2 bd-highlight">
           <div class = "p-2 bd-highlight"><%= f.label :first_name_kana, "(メイ)" %></div>
           <div class = "p-2 bd-highlight"><%= f.text_field :first_name_kana, autofocus: true, placeholder: "タロウ", required: true %></div>
         </div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :email,"メールアドレス" %></div>
            <div class = "p-2 bd-highlight"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %></div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :post_code,"郵便番号(ハイフンなし)" %></div>
            <div class = "p-2 bd-highlight"><%= f.text_field :post_code, autofocus: true, placeholder: "0000000", autocomplete: "postcode" %></div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :address,"住所" %></div>
            <div class = "p-2 bd-highlight"><%= f.text_field :address, placeholder: "東京都渋谷区山田町0-0-0", autocomplete: "address" %></div>
        </div>
       <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :phone_number,"電話番号(ハイフンなし)" %></div>
            <div class = "p-2 bd-highlight"><%= f.text_field :phone_number, placeholder: "0000000000", autocomplete: "phone_number" %></div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :password,"パスワード" %>
                                            <% if @minimum_password_length %>
                                              <em>(<%= @minimum_password_length %>文字以上)</em>
                                            <% end %></div>
            <div class = "p-2 bd-highlight"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>

        <div class= "d-flex flex-row bd-highlight mb-3">
            <div class = "p-2 bd-highlight"><%= f.label :password_confirmation,"パスワード(確認用)" %></div>
            <div class = "p-2 bd-highlight"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>

        <div class= "actions">
            <div class = "p-2 bd-highlight"><%= f.submit "新規登録",class: "btn btn-success btn-sm" %></div>
        </div>

      <% end %>

      <h4>既に登録済みの方</h4>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>