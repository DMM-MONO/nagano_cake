<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h2>ログイン</h2>
       <h5>会員の方はこちらからログイン</h5>
    </div>
  </div>
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"パスワード", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="actions row">
     <div class="col-sm-8 mx-auto">
      <%= f.submit "ログイン", class: "btn btn-md btn-primary" %>
     </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col-md-8 my-5">
        <h5>会員登録がお済みでない方</h5>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>

