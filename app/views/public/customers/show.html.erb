<div class="container">
  <div class="row">
    <span class="bg-light"><h3>マイページ</h3></span>
  </div>

  <div class="row mt-3">
    <div class="col-10 d-flex justify-content-start">
      <div class= pr-4><h4>登録情報</h4></div>
      <div><%= link_to "編集する", edit_customers_path, class:"btn btn-primary btn-sm" %></div>

    </div>
  </div>

  <div class="row mt-2">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td class="w-75"><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td class="w-75"><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td class="w-75"><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="w-75"><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td class="w-75"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td class="w-75"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

   <div class="row mt-3">
    <div class="col-10 d-flex justify-content-start">
      <div class= "pr-4">配送先</div>
      <div><%= link_to "一覧を表示する", shipping_addresses_path, class:"btn btn-outline-success" %></div>
    </div>
   </div>
    <div class="row mt-5">
    <div class="col-10 d-flex justify-content-start">
      <div class= "pr-4" >注文履歴</div>
      <div><%= link_to "一覧を表示する", orders_path, class:"btn btn-outline-success" %></div>
    </div>
   </div>

</div>