<div class="container">
  <div class="row">
    <h5 class="two-line-heading">マイページ</h5>
  </div>

  <div class="row mt-3">
    <div class="col-10 d-flex">
      <div><strong class="my_page_edit col-2">登録情報</strong><%= link_to "編集する", edit_customers_path, class:"btn btn-sm btn-success" %></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td class="w-75"><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td class="w-75"><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td class="w-75"><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="w-75"><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td class="w-75"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td class="w-75"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
   <div class="bottons">
     <p><strong class="shipping_addresses_link col-2">配送先</strong><%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-sm btn-primary col-1" %></p>
   　<p><strong class="orders_link col-1">注文履歴</strong><%= link_to "一覧を見る", orders_path, class:"btn btn-sm btn-primary col-1" %></p>
   </div>

</div>