<div class="mt-5">
<div class="container">
  <div class="row">
      <div class="col-md-2">
<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <% @genres.each do |genre| %>
        <p><%= link_to genre.name, items_path(genre_id: genre.id) %></p>
          <% end %>
        </td>
      </tr>
    </tbody>
</table>
</div>
<div class="col-md-4 offset-md-1">
     <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "300x200" %>
</div>

<div class="col-md-5">
<table class="table table-hover table-inverse">
    <tbody>
    <tr>
    <td>

        <p><%=  @item.name %></p>
        <p><%= @item.introduction %></p>
        <p>￥<%= (@item.price*1.1).round %>(税込)</p>
    </td>
    </tr>
    </tbody>
  </table>

  <%= form_with model: @cart_item, url:cart_items_path, local:true do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, [["1", "1"], ["2", "2"], ["3", "3"]], include_blank: "個数選択" %>
  <%= f.submit 'カートに入れる', class: "btn btn-success ml-3"%>
<% end %>
</div>
</div>
</div>
</div>