<div class="container">
  <div class="row">
      <div class="col-md-2">
<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <% @genres.each do |genre| %>
        <p><%= link_to genre.name, items_path(genre_id: genre.id) %></p>
          <% end %>
        </td>
      </tr>
    </tbody>
</table>
      </div>
  

    
<div class="col-md-8">
    <h2>
        <% if @genre %>
            <%= @genre.name %> 一覧
        <% else %>
            商品 一覧
        <% end %>
    </h2>
    <h4>(全<%= @items.count %>件)</h4>
  <div>
  <table class="table table-hover table-inverse">
    <tbody class="d-flex flex-wrap">
    <% @items.each do |item| %>
    <tr>
    <td>
        
        <%= link_to (attachment_image_tag item, :image, size: "100x100"), item_path(item.id) %><br>
        <p><%=  item.name %></p>
        <p>￥<%= item.price %></p>
      <% end %>
    </td>
    </tr>
    </tbody>
  </table>
  <%= paginate @item %>
  </div>
</div>
</div>
</div>

  