<div class="mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <table class="table table-bordered genre-table">
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <% @genres.each do |genre| %>
                  <p><%= link_to genre.name, items_path(genre_id: genre.id) %></p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-8">
        <h2>
          <% if @genre %>
            <%= @genre.name %> 一覧
            (全<%= @items.where(is_active: '販売中').count %>件)
          <% else %>
            商品 一覧(全<%= @item.where(is_active: '販売中').count %>件)
          <% end %>
        </h2>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <% if item.is_active == "販売中" %>
            <div>
                  <%= link_to (attachment_image_tag item, :image, size: "100x100"), item_path(item.id) %>
                  <p><%=  item.name %></p>
                  <p>￥<%= item.price %></p>
            </div>
            <% end %>
          <% end %>
        </div>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

  