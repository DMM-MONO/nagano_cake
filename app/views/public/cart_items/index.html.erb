<div class="container">
  <div class="row">
      <div class="col-md-8">
        <h2>ショッピングカート</h2>
          <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <table class="table table-bordered genre-table">
              <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価(税込)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @sum = 0 %>
                <% @cart_items.each do |cart_item| %>
                <tr>
                  <td>
                    <%= attachment_image_tag cart_item.item, :image, size: "50x50" %>
                    <%= cart_item.item.name %></td>
                  <td><%= (cart_item.item.price*1.1).round %></td>
                  <td>
                    <%= form_with model: cart_item, url:cart_item_path(cart_item), local:true do |f| %>
                    <%= f.select :amount, [["1", "1"], ["2", "2"], ["3", "3"]], include_blank: "個数選択" %>
                    <%= f.submit '保存' %>
                    <% end %>
                  </td>
                  <td><%= ((cart_item.item.price*1.1).round)*(cart_item.amount) %>
                      <% @sum += ((cart_item.item.price*1.1).round)*(cart_item.amount) %>
                  </td>
                  <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                </tr>
                  <% end %>
              </tbody>
            </table>
　　　      合計金額<%= @sum %>
　　　      <%#= link_to "買い物を続ける", root_path %>
　　　      <%#= link_to "情報入力に進む", 注文情報入力画面のリンク %>
      </div>
    </div>
</div>