<h1>注文情報入力</h1>


<%= form_with model:@order,  url:orders_path, local:true do |f| %>
    <div class="font-weight-bold mb-3">支払方法</div>
        <div class="mb-3">
          <%= f.radio_button :payment_method, "クレジット", checked: true %>
          <%= f.label :payment_method,"クレジット" %>
        </div>
        <div>
          <%= f.radio_button :payment_method, "銀行振込" %>
          <%= f.label :payment_method,"銀行振込" %>
        </div>
        <div class="font-weight-bold mb-3 mt-3">お届け先</div>
        <div>
          <%= f.radio_button :, "0", checked: true %>
          <%= f.label :shipping_sel,"ご自身の住所" %>
        </div>
        <div class="ml-3">
          <%= Customer.find(current_customer.id).full_name_kana %></br>
          <%= Customer.find(current_customer.id).full_name %>
        </div>
        <div class="mt-3">
          <%= f.radio_button :shipping_sel, "1" %>
          <%= f.label :shipping_sel,"登録済住所から選択" %>
        </div>
        <div class="ml-3">
          <%= f.collection_select :shipping_address_id, ShippingAddress.where(customer_id: current_customer.id), :id, :full_address, class:"w-100" %>
        </div>
        <div class="mt-3">
          <%= f.radio_button :shipping_sel, "2" %>
          <%= f.label :shipping_sel,"新しいお届け先" %>
        </div>
        <%=f.fields_for @shipping_address, class:"mt-3" do |i| %>
          <div class="row ml-3">
            <div class="col-4">
              <%= i.label :postcode,"郵便番号（ハイフンなし）" %>
            </div>
            <div class="col-6">
              <%= i.text_field :post_code, placeholder: "0000000", class:"w-100", id:"zip" %>
            </div>
          </div>

          <div class="row ml-3">
            <div class="col-4">
              <%= i.label :address,"住所" %>
            </div>
            <div class="col-6">
              <%= i.text_field :address, placeholder: "ああああああああ", class:"w-100", id:"address" %>
            </div>
          </div>

          <div class="row ml-3">
            <div class="col-4">
              <%= i.label :address_name,"宛名" %>
            </div>
            <div class="col-6">
              <%= i.text_field :address, placeholder: "1111", class:"w-100" %>
            </div>
          </div>
        <% end %>

        <div class="actions ml-3">
          <%= f.submit "確認画面へ進む",class: "btn-flat-primary btn-sm" %>
        </div>

      <% end %>
    </div>
