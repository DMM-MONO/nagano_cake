<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h2>配送先編集</h2>
    </div>
  </div>
      <%= form_with model:@shipping_address, local:true do |f| %>
         <div class="form-group row">
           <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-5">
               <%= f.text_field :post_code, autofocus: true, autocomplete: "postcode", class: "form-control" %>
             </div>
          </div>
          <div class="form-group row">
           <%= f.label :"住所", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-8">
               <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
             </div>
          </div>
          <div class="form-group row">
           <%= f.label :"宛名", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-5">
               <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
             </div>
             <div class="actions ml-auto">
            <%= f.submit "変更内容を保存", class: "btn btn-md btn-success" %>
          </div>
          </div>

      <% end %>
