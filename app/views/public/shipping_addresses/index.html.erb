<h1>配送先登録/一覧</h1>

<%= form_with model:@shipping_address, local:true do |f| %>
 <h4>郵便番号(ハイフンなし)</h4>
 <%= f.text_field :post_code %>
 <h4>住所</h4>
 <%= f.text_field :address %>
 <h4>宛名</h4>
 <%= f.text_field :name %>
 <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= @shipping_addresses.each do |shipping_address| %>
    <tr>
      <td><%= shipping_address.post_code %></td>
      <td><%= shipping_address.address %></td>
      <td><%= shipping_address.name %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>