<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>
      <%= form_with model:@shipping_address, local:true do |f| %>
         <div class="form-group row">
           <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-5">
               <%= f.text_field :post_code, autofocus: true, autocomplete: "postcode", placeholder: "0000000", class: "form-control" %>
             </div>
          </div>
          <div class="form-group row">
           <%= f.label :"住所", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-8">
               <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区山田町0-0-0", class: "form-control" %>
             </div>
          </div>
          <div class="form-group row">
           <%= f.label :"宛名", class: "col-sm-3 col-form-label" %>
             <div class="col-sm-5">
               <%= f.text_field :name, autocomplete: "name",  placeholder: "山田太郎",class: "form-control" %>
             </div>
             <div class="actions ml-auto">
            <%= f.submit "新規登録", class: "btn btn-md btn-success" %>
          </div>
          </div>

      <% end %>
    <div class="col-md-10 mt-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @shipping_addresses.each do |shipping_address| %>
            <tr>
              <td><%= shipping_address.post_code %></td>
              <td><%= shipping_address.address %></td>
              <td><%= shipping_address.name %></td>
              <td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>